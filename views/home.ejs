<%- include('partials/header') %>

    <h1>Home</h1>

    <div>
        <%= homeStartingContent %>
    </div>
    <div>
        <!-- TODO: Design Post Section -->

        <% posts.forEach(function(post) { %>
            <h2>
                <%= post.postTitle %>
            </h2>

            <p>
                <%= post.postBody.substring(0,100) + " ..." %>
                    <a href="http://localhost:3000/posts/<%=post.postTitle%>">Read More</a>
            </p>
            <% }); %>
    </div>
    <%- include('partials/footer') %>